{% extends 'base.html.twig' %}

{% block title %}Acceuil{% endblock %}

{% block body %}

   
    <div class='row d-flex justify-content-around'>

         <div class='row col-sm-6 col-md-4 col-xl-4 card mt-5 sticky-top sticky-offset'>

            <div class="p-3 ">
                
                <form>
                    <div class="form-group">
                        <textarea class="form-control" id="exampleFormControlTextarea1" placeholder="Exprime toi champion!" rows="3"></textarea>
                         <input class="form-control mt-4" type="file" id="formFileDisabled" disabled>
                    </div>
                </form>
                <button class="btn btn-success">Poster</button>
            </div>

         </div>  

          <div class='col-sm-6 col-md-4 col-xl-5 '>
               

                {% for post in posts %}

                    <div class="row d-flex justify-content-center mt-5 d-flex">
                        
                                <div class="card col-sm-12 col-md-12 bg-light  ">
                                    
                                        <div class="p-3">
                                            <div class="text-info h5 "> {{post.autheur.firstName}}</div>
                                            <div class='d-flex justify-content-between'> <span class='text-danger'>{{post.autheur.groupName.name}}</span>  <span class='font-italic'>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</span>  </div> 
                                            <p class= "mt-4 mb-4 text-justify">{{ post.content }} </p>
                                            <div class='row'>
                                                {% for image in post.photo %}
                                                    <div class= 'mr-2'>
                                                        <img src="{{ asset('/uploads/' ~ image.photoName) }}" alt="Image" class='img-thumbnail' width="150">
                                                    </div>
                                                {% endfor %}
                                            </div>
                                        </div>
                                </div>
                    </div>

                {% endfor %}
   
          </div>  
         
    </div>

   
   
        
        
        


{% endblock %}